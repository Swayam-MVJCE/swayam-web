// }

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Event {
  id              String    @id @default(uuid())
  title           String
  slug            String    @unique
  description     String
  judgingCriteria String?
  rules           String?
  poster_url      String?
  date            DateTime?
  venue           String?
  registrationFee Float?
  firstPrize      String?
  secondPrize     String?
  category        String?

  @@map("events")
}
